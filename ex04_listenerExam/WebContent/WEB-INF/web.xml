<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>ex04_listenerExam</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <listener>
    <listener-class>ex0110.listener.AppContextListener</listener-class>
  </listener>
  <listener>
    <listener-class>ex0110.listener.SessionTestListener</listener-class>
  </listener>
  <session-config>
    <session-timeout>1</session-timeout>
  </session-config>
  <servlet>
    <servlet-name>loginCheckServlet</servlet-name>
    <servlet-class>ex0110.listener.LoginCheckServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>loginCheckServlet</servlet-name>
    <url-pattern>/loginCheck</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>sessionCloseServlet</servlet-name>
    <servlet-class>ex0110.listener.SessionCloseServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>sessionCloseServlet</servlet-name>
    <url-pattern>/sessionClose</url-pattern>
  </servlet-mapping>
</web-app>